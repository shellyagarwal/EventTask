<!DOCTYPE html>
<html>
<head>
  <title>EventTask</title>
  <%= stylesheet_link_tag    "application", "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%=root_path%>">EventTask</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="<%=root_path%>">Home</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      	<% if user_signed_in? %>
        	<li><%= link_to " Logout", destroy_user_session_path, :method => 'delete' %></li>
        <% else %>
        	<li><a href="<%=new_user_session_path%>">Login</a></li>
        	<li><a href="<%=new_user_registration_path%>">Register</a></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
